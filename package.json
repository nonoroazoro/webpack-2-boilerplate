{
  "name": "webpack-2-boilerplate",
  "version": "1.0.0",
  "description": "Minimal HMR example for Webpack 2 & React",
  "author": {
    "name": "nonoroazoro",
    "email": "xiaochao.k@gmail.com"
  },
  "main": "index.js",
  "scripts": {
    "prestart": "npm run build:prod",
    "start": "cross-env NODE_ENV=production node ./bin/www",
    "dev": "cross-env NODE_ENV=development node ./bin/www",
    "build:dev": "cross-env NODE_ENV=development webpack --config webpack.dev.config.js --progress",
    "build:prod": "cross-env NODE_ENV=production webpack --config webpack.prod.config.js --progress",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nonoroazoro/webpack-2-boilerplate.git"
  },
  "homepage": "https://github.com/nonoroazoro/webpack-2-boilerplate",
  "bugs": {
    "url": "https://github.com/nonoroazoro/webpack-2-boilerplate/issues"
  },
  "keywords": [
    "boilerplate",
    "webpack-2"
  ],
  "license": "MIT",
  "engines": {
    "node": ">= 6"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.0",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-2": "^6.18.0",
    "chalk": "^1.1.3",
    "classnames": "^2.2.5",
    "clean-webpack-plugin": "^0.1.14",
    "css-loader": "^0.26.1",
    "enzyme": "^2.7.0",
    "enzyme-to-json": "^1.4.5",
    "eslint": "^3.12.2",
    "eslint-config-zoro": "^1.2.7",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-react": "^6.8.0",
    "extract-text-webpack-plugin": "^2.0.0-beta.4",
    "file-loader": "^0.9.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^18.0.0",
    "less": "^2.7.1",
    "less-loader": "^2.2.3",
    "morgan": "^1.7.0",
    "normalize.css": "^5.0.0",
    "react": "^15.4.1",
    "react-addons-test-utils": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-hot-loader": "^3.0.0-beta.6",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^2.1.0-beta.26",
    "webpack-dev-middleware": "^1.9.0",
    "webpack-hot-middleware": "^2.14.0"
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "compression": "^1.6.2",
    "cross-env": "^3.1.3",
    "express": "^4.14.0",
    "helmet": "^3.2.0",
    "pug": "^2.0.0-beta6",
    "serve-favicon": "^2.3.2"
  },
  "jest": {
    "testPathDirs": [
      "<rootDir>/client"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "identity-obj-proxy"
    }
  }
}
