{
  "name": "webpack-3-boilerplate",
  "description": "Minimal HMR example for Webpack 3 & React",
  "version": "2.0.0",
  "author": {
    "name": "nonoroazoro",
    "email": "xiaochao.k@gmail.com"
  },
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/nonoroazoro/webpack-3-boilerplate.git"
  },
  "homepage": "https://github.com/nonoroazoro/webpack-3-boilerplate",
  "bugs": {
    "url": "https://github.com/nonoroazoro/webpack-3-boilerplate/issues"
  },
  "keywords": [
    "boilerplate",
    "webpack-3"
  ],
  "engines": {
    "node": ">= 6"
  },
  "scripts": {
    "precommit": "lint-staged",
    "prestart": "npm run build:prod",
    "start": "cross-env NODE_ENV=production node ./bin/www",
    "dev": "cross-env NODE_ENV=development node ./bin/www",
    "build:dev": "cross-env NODE_ENV=development webpack --config webpack.dev.config.js --progress",
    "build:prod": "cross-env NODE_ENV=production webpack --config webpack.prod.config.js --progress",
    "test": "cross-env BABEL_ENV=test jest",
    "test:watch": "npm test -- --watch",
    "test:cov": "npm test -- --coverage",
    "test:update": "npm test -- --updateSnapshot"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "cross-env": "^5.1.1",
    "express": "^4.16.2",
    "helmet": "^3.9.0",
    "pug": "^2.0.0-rc.4",
    "serve-favicon": "^2.4.5"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "chalk": "^2.3.0",
    "classnames": "^2.2.5",
    "clean-webpack-plugin": "^0.1.17",
    "css-loader": "^0.28.7",
    "enzyme": "^3.2.0",
    "enzyme-to-json": "^3.2.2",
    "eslint": "^4.12.0",
    "eslint-config-zoro": "^1.3.1",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-react": "^7.5.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.5",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^21.2.1",
    "less": "^2.7.3",
    "less-loader": "^4.0.5",
    "lint-staged": "^5.0.0",
    "morgan": "^1.9.0",
    "normalize.css": "^7.0.0",
    "prettier": "^1.8.2",
    "prop-types": "^15.6.0",
    "react": "^16.1.1",
    "react-addons-test-utils": "^15.6.2",
    "react-dom": "^16.1.1",
    "react-hot-loader": "^3.1.3",
    "react-router-dom": "^4.2.2",
    "react-test-renderer": "^16.1.1",
    "style-loader": "^0.19.0",
    "url-loader": "^0.6.2",
    "webpack": "^3.8.1",
    "webpack-dev-middleware": "^1.12.1",
    "webpack-hot-middleware": "^2.21.0"
  },
  "jest": {
    "roots": [
      "<rootDir>/client/"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "identity-obj-proxy"
    }
  },
  "lint-staged": {
    "NA/**/*.js": [
      "prettier --tab-width 4 --trailing-comma none --write",
      "eslint",
      "git add"
    ],
    "NA/**/*.jsx": [
      "prettier --tab-width 4 --trailing-comma none --write",
      "eslint",
      "git add"
    ]
  }
}
