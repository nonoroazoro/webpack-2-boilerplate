{
  "name": "webpack-2-boilerplate",
  "description": "Minimal HMR example for Webpack 2 & React",
  "version": "1.0.0",
  "author": {
    "name": "nonoroazoro",
    "email": "xiaochao.k@gmail.com"
  },
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/nonoroazoro/webpack-2-boilerplate.git"
  },
  "homepage": "https://github.com/nonoroazoro/webpack-2-boilerplate",
  "bugs": {
    "url": "https://github.com/nonoroazoro/webpack-2-boilerplate/issues"
  },
  "keywords": [
    "boilerplate",
    "webpack-2"
  ],
  "engines": {
    "node": ">= 6"
  },
  "scripts": {
    "prestart": "npm run build:prod",
    "start": "cross-env NODE_ENV=production node ./bin/www",
    "dev": "cross-env NODE_ENV=development node ./bin/www",
    "build:dev": "cross-env NODE_ENV=development webpack --config webpack.dev.config.js --progress",
    "build:prod": "cross-env NODE_ENV=production webpack --config webpack.prod.config.js --progress",
    "test": "cross-env BABEL_ENV=test jest",
    "test:watch": "npm test -- --watch",
    "test:cov": "npm test -- --coverage",
    "test:update": "npm test -- --updateSnapshot"
  },
  "dependencies": {
    "body-parser": "^1.17.1",
    "compression": "^1.6.2",
    "cross-env": "^4.0.0",
    "express": "^4.15.2",
    "helmet": "^3.5.0",
    "pug": "^2.0.0-beta6",
    "serve-favicon": "^2.4.2"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.2",
    "babel-loader": "^6.4.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "chalk": "^1.1.3",
    "classnames": "^2.2.5",
    "clean-webpack-plugin": "^0.1.16",
    "css-loader": "^0.28.0",
    "enzyme": "^2.8.2",
    "enzyme-to-json": "^1.5.1",
    "eslint": "^3.19.0",
    "eslint-config-zoro": "^1.2.9",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-react": "^6.10.3",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^19.0.2",
    "less": "^2.7.2",
    "less-loader": "^4.0.3",
    "morgan": "^1.8.1",
    "normalize.css": "^6.0.0",
    "prop-types": "^15.5.8",
    "react": "^15.5.4",
    "react-addons-test-utils": "^15.5.1",
    "react-dom": "^15.5.4",
    "react-hot-loader": "^3.0.0-beta.6",
    "react-router": "^4.1.1",
    "react-router-dom": "^4.1.1",
    "style-loader": "^0.16.1",
    "url-loader": "^0.5.8",
    "webpack": "^2.4.1",
    "webpack-dev-middleware": "^1.10.1",
    "webpack-hot-middleware": "^2.18.0"
  },
  "jest": {
    "roots": [
      "<rootDir>/client/"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "identity-obj-proxy"
    }
  }
}
