{
  "name": "webpack-boilerplate",
  "description": "Minimal HMR example for Webpack & React",
  "version": "3.0.0",
  "author": {
    "name": "nonoroazoro",
    "email": "xiaochao.k@gmail.com"
  },
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/nonoroazoro/webpack-boilerplate.git"
  },
  "homepage": "https://github.com/nonoroazoro/webpack-boilerplate",
  "bugs": {
    "url": "https://github.com/nonoroazoro/webpack-boilerplate/issues"
  },
  "keywords": [
    "boilerplate",
    "webpack"
  ],
  "engines": {
    "node": ">= 6"
  },
  "scripts": {
    "precommit": "lint-staged",
    "prestart": "npm run build:prod",
    "clean": "rimraf ./dist/*",
    "start": "cross-env NODE_ENV=production node ./scripts/www",
    "dev": "cross-env NODE_ENV=development node ./scripts/www",
    "build:dev": "npm run clean && cross-env NODE_ENV=development webpack --config ./scripts/webpack/webpack.config.dev.js --progress",
    "build:prod": "npm run clean && cross-env NODE_ENV=production webpack --config ./scripts/webpack/webpack.config.prod.js --progress",
    "test": "cross-env BABEL_ENV=test jest",
    "test:watch": "npm test -- --watch",
    "test:cov": "npm test -- --coverage",
    "test:update": "npm test -- --updateSnapshot"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "compression": "^1.7.2",
    "cross-env": "^5.1.4",
    "express": "^4.16.3",
    "helmet": "^3.12.0",
    "pug": "^2.0.3",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.13",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "chalk": "^2.3.2",
    "classnames": "^2.2.5",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^0.28.11",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.3",
    "eslint": "^4.19.1",
    "eslint-config-zoro": "^1.4.5",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-react": "^7.7.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.4.3",
    "less": "^3.0.1",
    "less-loader": "^4.1.0",
    "lint-staged": "^7.0.0",
    "morgan": "^1.9.0",
    "normalize.css": "^8.0.0",
    "prettier": "^1.11.1",
    "prop-types": "^15.6.1",
    "raf": "^3.4.0",
    "react": "^16.3.0",
    "react-addons-test-utils": "^15.6.2",
    "react-dom": "^16.3.0",
    "react-hot-loader": "^4.0.0",
    "react-router-dom": "^4.2.2",
    "react-test-renderer": "^16.3.0",
    "rimraf": "^2.6.2",
    "style-loader": "^0.20.3",
    "url-loader": "^1.0.1",
    "webpack": "^4.4.1",
    "webpack-cli": "^2.0.13",
    "webpack-dev-middleware": "^3.1.0",
    "webpack-hot-middleware": "^2.21.2"
  },
  "lint-staged": {
    "NA/**/*.js": [
      "prettier --tab-width 4 --trailing-comma none --write",
      "eslint",
      "git add"
    ],
    "NA/**/*.jsx": [
      "prettier --tab-width 4 --trailing-comma none --write",
      "eslint",
      "git add"
    ]
  }
}
